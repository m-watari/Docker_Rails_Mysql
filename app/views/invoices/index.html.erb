<p invoice_id="notice"><%= notice %></p>

<h1 class="mt-5">Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Company name</th>
      <th>Zip</th>
      <th>Pref</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Subtotal</th>
      <th>Tax rate</th>
      <th>Tax</th>
      <th>Amount</th>
      <th>Sub1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.title %></td>
        <td><%= invoice.company_name %></td>
        <td><%= invoice.zip %></td>
        <td><%= invoice.pref %></td>
        <td><%= invoice.address %></td>
        <td><%= invoice.tel %></td>
        <td><%= invoice.subtotal %></td>
        <td><%= invoice.tax_rate %></td>
        <td><%= invoice.tax %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.sub1 %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

