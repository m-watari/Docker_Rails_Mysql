<h2>Groups</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td></td>
        <td>
          <%= link_to group.name, group_path(group_id: group.group_id) %>
        </td>
        <td><%= group.introduction %></td>
        <td>
          <% if group.owner_id == current_user.id %>
            <%= link_to 'Edit', edit_group_path(group_id: group.group_id), class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>