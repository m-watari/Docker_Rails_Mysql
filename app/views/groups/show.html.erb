<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h2>Group Detail</h2>
      <table class='table table-hover table-inverse'>
        <tr>
          <td></td>
          <td>
          <% if @group.name.nil? %>
            <%= @group.name %>
          <% end %>
          </td>
          <td><%= @group.introduction %></td>
          <td>
            <% if @group.owner_id == current_user.id %>
              <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
      <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Company name</th>
      <th>Zip</th>
      <th>Pref</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Subtotal</th>
      <th>Tax rate</th>
      <th>Tax</th>
      <th>Amount</th>
      <th>Sub1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.title %></td>
        <td><%= invoice.company_name %></td>
        <td><%= invoice.zip %></td>
        <td><%= invoice.pref %></td>
        <td><%= invoice.address %></td>
        <td><%= invoice.tel %></td>
        <td><%= invoice.subtotal %></td>
        <td><%= invoice.tax_rate %></td>
        <td><%= invoice.tax %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.sub1 %></td>
        <td>
        <%= link_to 'Show', '/invoices/' + invoice.invoice_id %>
        </td>

        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>